<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_group_logo"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_shinchan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_group_logo"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="슛솔랭~!"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_group_date"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_group_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Since 2022. 06. 01"
                app:layout_constraintBottom_toTopOf="@id/tv_group_info"
                app:layout_constraintTop_toBottomOf="@id/tv_group_name" />

            <TextView
                android:id="@+id/tv_group_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현대아이티앤이 | 멤버 41"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_group_date" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>